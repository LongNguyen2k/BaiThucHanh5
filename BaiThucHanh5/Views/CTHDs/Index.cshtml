@model IEnumerable<BaiThucHanh5.Models.ViewModel>
@{
    ViewBag.Title = "Chi tiết hóa đơn";
}
<h2>Chi tiết hóa đơn</h2>
<p>
    @foreach (var m in ViewBag.Main)
 {
 <b> <text> Số hóa đơn: @m.hoadon.MaHD </text ></b >


      <br/>


      <b ><text > Tên khách hàng: @m.khachhang.TenKH </text ></b >
 }
</p>
<table class="table">
    <tr>
        <th>
            Số TT
        </th>
        <th>
            Tên SP
        </th>
        <th>
            Đơn vị tính
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Đơn giá
        </th>
        <th>
            Thành tiền
        </th>
    </tr>
    @{
        double tongtien = 0;
        int i = 0;
    }
    @foreach (var item in ViewBag.Sub)
    {
        i++;
        tongtien += (Convert.ToDouble(@item.cthd.Soluong) *
       Convert.ToDouble(@item.cthd.DongiaBan));
        <tr>
            <td>@i</td>
            <td>
                @item.sanpham.TenSP
            </td>
            <td>
                @item.sanpham.Donvitinh
            </td>
            <td>
                @item.cthd.Soluong
            </td>
            <td>
                @String.Format("{0:0,##0}", item.cthd.DongiaBan)
            </td>
            <td>
                @String.Format("{0:0,##0}", item.Thanhtien)
            </td>
        </tr>
    }
    <tr>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
      
        <th>Tổng tiền:</th>
        <th>
            <text>@String.Format("{0:0,##0}", tongtien) </text>
        </th>
    </tr>
</table>